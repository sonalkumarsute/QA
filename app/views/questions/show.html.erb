<p id="notice"><%= notice %></p>

<p>
  <strong>Question:</strong>
  <%= @question.content %>
</p>
<p>
  <strong>Answers:</strong>
  <ul>
    <%@question.answers.each do |ans|%>
      <li class="answer"><%=ans.content%></li>
    <%end%>
  </ul>
</p>

<p>
  <strong>Topic:</strong>
  <%= @question.topic.try(:name) %>&nbsp;&nbsp;<button type="button" class= "btn-xs follow follow_topic"><%=link_to "Follow", sfollow_path(following_id: @question.topic.id, following_type:"Topic", question_id: @question.id), method: :post%></button>
</p>

<p>
  <strong>Author:</strong>
  <%= @question.user.try(:name) %>&nbsp;&nbsp;<button type="button" class= "btn-xs follow follow_user"><%=link_to "Follow", sfollow_path(following_id: @question.user.id, following_type: "User", question_id: @question.id), method: :post%></button>
</p>
<%= link_to 'Back', questions_path %>
